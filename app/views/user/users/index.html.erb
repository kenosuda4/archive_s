<div class="container">
        <div class="row no1">
                <div class="col-xs-3">
                </div>
            
                <div class="col-xs-9">
                        <% @users.each do |user| %>
                        <table>
                        <tr>
                                <th>name</th>
                                <th>count</th>
                        </tr>
                        <tr>
                                <td>
                                <%= link_to user_path(user), class: "btn-link" do %>
                                        <%= user.name %>
                                <% end %>
                                </td>
                                <td>
                                        <%= user.menus.count %>
                                </td>
                        </tr>
                        </table>
                        <% end %>
                </div>
        </div>
</div>