<table class="table table-striped">
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>メニュー数</th>
    </tr>
  </thead>
  <tbody>

  <% users.each do |user| %>
    <% if admin_signed_in? %>
        <tr>
            <td>
                <%= link_to admin_user_path(user.id) do %>
                    <%= user.name %>
                <% end %>
            </td>
            <td>
                <%= user.menus.count %>
            </td>
        </tr>
    <% else %>
        <tr>
            <td>
                <%= link_to user_path(user.id) do %>
                    <%= user.name %>
                <% end %>
            </td>
            <td>
                <%= user.menus.count %>
            </td>
        </tr>
    <% end %>
  <% end %>

  </tbody>
 </table>