<div class="container">
<div class="row no1">
    <div class="col-xs-6">
      <% if @user.email == "guest@example.com" %>
        <p>ゲストユーザーは編集できません</p>
        <%= link_to :back do %>
          <button>戻る</button>
        <% end %>
      <% else %>
        <%= form_for @user, class: "form-control" do |f| %>
            <!-- <%= f.file_field :image %> -->



            <%= f.label :name %><br />
            <%= f.text_area :name %><br>

            <%= f.label :introduction %>
            <%= f.text_area :introduction, 'data-provider': :summernote, class:"summernote" %><br>

            <%= f.submit "編集", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        <% end %>
        <%= link_to :back do %>
          <button>戻る</button>
        <% end %>
          <%= link_to "　退会する　", quit_user_path(@user), method: :delete, "data-confirm" => "本当に退会しますか？退会後1ヶ月以内ならアカウント復旧が可能です。" , class: "btn btn-danger" %>
      <% end %>
    </div>
</div>
</div>

<script>
$('.summernote').summernote({
  height: 300,
  toolbar: [
    ['style', ['style']],
    ['style', ['bold', 'italic', 'underline', 'clear']],
    ['fontsize', ['fontsize']],
    ['color', ['color']],
    ['para', ['ul', 'ol', 'paragraph']],
    ['height', ['height']],
    ['insert', ['link']],
    ['table', ['table']],
  ]
})
</script>