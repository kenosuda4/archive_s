<% if menu.bookmarked_by?(current_user) %>
   <%= link_to(menu_add_path(menu), method: :delete, remote: true, id: :"like-button-#{menu.id}") do %>
       <i class="fa-lg fa fa-heart icon-btn liked"></i>
   <% end %>
<% else %>
   <%= link_to(menu_add_path(menu), method: :post, remote: true, id: :"like-button-#{menu.id}") do %>
       <i class="fa-lg fa fa-heart-o icon-btn not-like"></i>
   <% end %>
<% end %>
