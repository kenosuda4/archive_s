<div class="container">
    <div class="row no1">
        <div class="col-lg-offset-2 col-lg-8 col-xs-12">
        <h3>ラップタイム編集</h3>
        <p>選手名 <%= @rap.record.name %></p>
        <p>大会名 <%= @rap.record.competition.name %></p>
        <%= form_for @rap, class: "form-control" do |f| %>
    
            <%= f.hidden_field :record_id,:value => @record.id,class:"form-control" %>
            <%= f.label :距離 %>
            <%= f.number_field :distance, class:"form-control"%>

            <%= f.label :ラップタイム %>
            <%= f.number_field :rap_time, step: '0.01', class:"form-control"%>

            <%= f.submit "編集", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        <% end %>
            
        </div>
    </div>
</div>