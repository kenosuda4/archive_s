<div class="container">
<div class="row no1">
        <div class="col-xs-offset-2 col-xs-8 col-xs-offset-2">
                <h3>メニュー 一覧</h3>
                <table class="table">
                        <tr>
                                <th>ユーザー</th>
                                <th>メニュー</th>
                        </tr>
                        <% @menus.each do |menu| %>
                        <tr>
                                <td>
                                        <%= menu.user.name %>
                                </td>
                                <td>
                                    <%= link_to menu_path(menu), class: "btn-link" do %>
                                        <strong><%= menu.name %></strong>
                                    <% end %>
                                </td>
        
                        </tr>
                         <% end %>
                         <%= paginate @menus %>
                </table>
        </div>
</div>
</div>