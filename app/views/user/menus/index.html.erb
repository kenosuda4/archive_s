<div class="container">
<div class="row no1">
        <div class="col-lg-3">
                <div class="side-menu">
                    <%= render 'sorts/sort_select', menu: @menu %>  
                    <%= render 'user/menus/genre_search', genres: @genres %>
                </div> 
        </div>
        <div class="col-lg-7">
                <h3>メニュー・一覧</h3>
                <table class="table">
                        <tr>
                                <th>ユーザー</th>
                                <th>メニュータイトル</th>
                                <th>距離</th>
                                <th>競技</th>
                        </tr>
                        <% @menus.each do |menu| %>
                        <tr>
                                <td>
                                        <%= menu.user.name %>
                                </td>
                                <td>
                                   <%= link_to menu_path(menu), class: "btn-link" do %>
                                     <strong><%= menu.name %></strong>
                                   <% end %>
                                </td>
                                <td>
                                   <%= menu.total_distance %>
                                </td>
                                <td>
                                   <%= menu.genre.name %> 
                                </td>
                        </tr>
                         <% end %>
                         <%= paginate @menus %>
                </table>
        </div>
        <% if request.url.include?('genre_search') %>
        <% else %>
          <div class="row">
            <div class="col-xs-6">
            </div>
            <div class="col-xs-6">
                <%= paginate @menus %>
            </div>
          </div>
        <% end %>
</div>
</div>