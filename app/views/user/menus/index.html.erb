<div class="container">
<div class="row no1">

        <div class="col-xs-3">
            
        </div>
        <div class="col-xs-9">
                <table>
                        <tr>
                                <th>user name</th>
                                <th>menu name</th>
                        </tr>
                        <% @menus.each do |menu| %>
                        <tr>
                                <td>
                                        <%= menu.user.name %>
                                </td>
                                <td>
                                    <%= link_to menu_path(menu), class: "btn-link" do %>
