<% if current_user.id == @user.id %>
<% else %>
<p>非公開になったメニューです</p>

<div class="col-lg-6 col-xs-12">       
            <% if @menu.image? %>
                <%=  link_to @menu.image.url, 'data-lightbox': @menu.image do %>
                    <%= image_tag @menu.image.thumb.url, class:"photo" %>
                <% end %>
            <% else %>
                <%= image_tag @menu.image.thumb.url, class:"photo"  %>
            <% end %>
        </div>
        <div class="col-lg-offset-2  col-lg-3 col-xs-offset-2  col-xs-8">
            <div class="menu-content">
                <h4>Menu name:<%= @menu.name %> </h4>
                ユーザー
                <%= link_to @menu.user.name, user_path(@user) %><br />
                合計距離
                <%= @menu.total_distance %>m<br>
                <% if @menu.is_valid == true %>
                    <p>ステータス　公開中<br>
                <% else %>
                    <p>ステータス　非公開<br>
                <% end %>
                 内容
                <%= @menu.content.html_safe %><br>
                <% if user_signed_in? %>
                    <% if current_user.id == @user.id %>
                    <% else %>
                        <p>ブックマーク</p>
                        <div id="bookmark-btn-<%= @menu.id %>">
                            <%= render 'user/bookmarks/bookmark', menu: @menu %>
                        </div>
                    <% end %>
                <% else %>
                <% end %>
                <%= link_to :back do %>
                    <button>前へ戻る</button>
                <% end %>
                
            </div>

            <% if user_signed_in? %>
                <% if current_user.id == @user.id %>
                    <%= link_to "メニュー編集", edit_menu_path(@menu) %>
                    <%= link_to "メニュー削除", menu_path(@menu.id), method: :delete,  "data-confirm" => "本当に削除しますか？"  ,class:"btn-sm btn-danger destroy_menu_10349"%>
                <% end %>
            <% else %>
            <% end %>
        </div>
    <% end %>