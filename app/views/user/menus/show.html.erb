<div class="container">
<div class="row no1">
        <div class="col-xs-6">

        <%= image_tag @menu.image.thumb.url %>
        
        </div>
        <div class="col-xs-3">

        </div>
        <div class="col-xs-4">
            <div class="menu-content">
                メニュー名
                <%= @menu.name %><br>

                内容
                <%= @menu.introduction.html_safe %>
            
                合計距離
                <%= @menu.total_distance %>m<br>
            </div>
            
            <%= link_to '戻る', :back%>
            <% if user_signed_in? %>
                <% if current_user.id == @user.id %>
                    <%= link_to "メニュー編集", edit_menu_path(@menu) %>
                    <%= link_to "Destroy", menu_path(@menu.id), method: :delete,  "data-confirm" => "本当に削除しますか？"  ,class:"btn-sm btn-danger destroy_menu_10349"%>
                <% end %>
            <% else %>
            <% end %>
        </div>
</div>
</div>
