<div class="container">
<div class="row no1">
    <div class="col-xs-offset-1 col-xs-10 col-xs-offset-1">
        <h2>メニュー編集</h2>
        <%= form_for @menu, class: "form-control" do |f| %>
            <%= f.file_field :image %>
   
            <%= f.label :メニュー名 %>
            <%= f.text_field :name, class:"form-control" %><br>

            <%= f.label :内容 %><br>
            <%= f.text_area :content, 'data-provider': :summernote %><br>
            
            <%= f.label :合計距離 %>
            <%= f.number_field :total_distance, class:"form-control" %>
            <%= f.label :ジャンル %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name %>

            <%= f.label :公開 %>
            <%= f.radio_button :is_valid, true %>
            <%= f.label :非公開　%>
            <%= f.radio_button :is_valid, false %>

            <%= f.submit "編集", class:"btn btn-lg btn-block btn-base-1 mt-20" %>

     <% end %>
    </div>
</div>
</div>