<div class="container">
<div class="row no1">

    <div class="col-xs-offset-1 col-xs-3">
    <h2>新規投稿</h2>
        <%= form_for @genre, url: admin_genres_path, method: :post, class: "form-control" do |f| %>
            スポーツジャンル名
            <%= f.text_field :name, class:"form-control" %>
    
            <%= f.submit "新規登録", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        <% end %>
    </div>

    <div class="col-xs-5">
    <h2>genre</h2>
    
    <% @genres.each do |genre| %>
        <table class="info-table">
            <li><%= link_to genre.name, admin_genre_path(genre) %></li>
        </table>
    <% end %>
    
</div>

</div>
</div>