<div class="container">
  <div class="row no1">
      <div class="col-lg-offset-3 col-lg-6 col-xs-offset-1 col-xs-10 ">
      <h2>大会一覧</h2>
      <table class="table table-striped">
      　<tr>
         <thead>
             <th>user-name</th>
             <th>name</th>
         </thead>
       </tr>
       <tr>
         <% @competitions.each do |competition| %>
          <td>
            <%= competition.user.name %>
          </td>
          <td>
             <%= link_to competition.name, admin_competition_path(competition) %>
          </td>
       </tr>
         <% end %>
      　
      </table>
      
      </div>
  </div>
</div>