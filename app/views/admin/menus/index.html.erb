<div class="container">
<div class="row no1">
    <div class="col-lg-offset-3 col-lg-6 col-xs-offset-1 col-xs-10 ">
            <table class="table">
                <tr>
                    <th>user name</th>
                    <th>menu name</th>
                </tr>
                <% @menus.each do |menu| %>
                <tr>
                
                    <td>
                        <%= menu.user.name %>
                    </td>
                    <td>
                        <%= link_to admin_menu_path(menu), class: "btn-link" do %>
                            <strong><%= menu.name %></strong>
                        <% end %>
                    </td>
                
                </tr>
                <% end %>
                <%= paginate @menus %>
            </table>
             
        </div>
</div>
</div>