<div class="container">
<div class="row no1">
    <div class="col-xs-3">
        <% if user_signed_in? %>
            <% if current_user.id == @user.id %>
            <h3>新規投稿</h3>
            <%= form_for @record, url: records_path, method: :post, class: "form-control" do |f| %>
        
                <%= f.label :大会名 %>
                <%= f.collection_select :competition_id, @user.competitions.all, :id, :name %><br>
    
                <%= f.label :種目 %>
                <%= f.collection_select :athletic_event_id, AthleticEvent.all, :id, :name %><br>

                <%= f.label :選手名 %>
                <%= f.text_area :name %><br>

                <%= f.label :記録 %>
                <%= f.text_area :time %>

                <%= f.submit "投稿", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
        <% end %>
    <% else %>
    <% end %>
    </div>
    <div class="col-xs-3">
        <h2>記録詳細</h2>
        <div class="record-main">
            <table class="table table-striped">
             　<tr>
                <thead>
                    <th><%= @record.name %></th>
                    <th></th>
                </thead>
                </tr>
                <tr>
                    <td><%= @record.time %></td>
                    <td><%= link_to '編集', edit_admin_record_path(@record) %></td>
                </tr>
        </table>
        <%= link_to @record.competition.name, competition_path(@competition) %>

    </div>
    </div>
</div>
</div>