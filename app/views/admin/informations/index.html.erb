<div class="container">
<div class="row no1">
    <div class="col-lg-4 col-xs-12">
        <h2>新規投稿</h2>
        <%= form_for @information, url: admin_informations_path, method: :post, class: "form-control" do |f| %>
        <%= f.label:タイトル %>
        <%= f.text_field :title, class:"form-control" %>
        <%= f.label:内容 %>
        <%= f.text_field :info_content, class:"form-control" %>
        <%= f.label:公開ステータス %>
        　公開 
        　<%= f.radio_button :is_valid, true %> 
        　非公開 
        　<%= f.radio_button :is_valid, false %> 
        <%= f.submit "新規登録", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>
    </div>

    <div class="col-lg-offset-2 col-lg-6 col-xs-12">
        
        <h2>informations</h2>
        <% @informations.each do |information| %>
            <table class="info-table">
                <tr>
                    <th><%= link_to information.title, admin_information_path(information) %>: </th>
               
                    <%if information.is_valid == true %>
                        <th> 公開 </th>
                    <% else %>
                        <th> 非公開 </th>
                    <% end %>
                </tr>
            </table>
        <% end %>
        
    </div>
</div>
</div>