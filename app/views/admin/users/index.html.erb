<div class="container">
        <div class="row no1">
                <div class="col-xs-offset-3 col-xs-6 col-xs-offset-3">
                <table class="table">
                        <tr>
                                <th>user name</th>
                                <th>menu count</th>
                                <th>competition count</th>
                        </tr>
                        <% @users.each do |user| %>
                        <tr>
                                <td>
                                <%= link_to admin_user_path(user), class: "btn-link" do %>
                                        <strong><%= user.name %></strong>
                                <% end %>
                                </td>
                                <td>
                                <%= user.menus.count %>
                                </td>
                                <td>
                                <%= user.competitions.count %>
                                </td>
                        </tr>
                        <% end %>
                        <%= paginate @users %>
                </table>
                </div>
        </div>
</div>