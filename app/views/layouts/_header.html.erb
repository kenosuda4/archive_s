<header class="header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12" style="height:85px;">
        <nav class="clearfix" style="line-height: 15px;font-size: 15px;">
          <ul class="nav navbar-nav av navbar-nav navbar-right header-navi">
            <% if admin_signed_in? %>
             <li><%= link_to "お知らせ一覧", admin_informations_path %></li>
              <li><%= link_to "種目一覧", admin_athletic_events_path %></li>
              <li><%= link_to "ジャンル一覧", admin_genres_path %></li>
              <li><%= link_to "メニュー 一覧", admin_menus_path %></li>
              <li><%= link_to "ユーザー 一覧", admin_users_path %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
            <% elsif user_signed_in? %>
            <li class="user-name">Login User  <%= current_user.name %></li>
            <li><%= link_to "メニュー 一覧", menus_path %></li>
            <li><%= link_to "ユーザー 一覧", users_path %></li>
            <li><%= link_to "マイページ", user_path(current_user) %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li><%= link_to "メニュー 一覧", menus_path %></li>
            <li><%= link_to "ユーザー 一覧", users_path %></li>
            <li><%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post %></li>
            <li><%= link_to 'ログイン', new_user_session_path %></li>
            <li><%= link_to '新規登録', new_user_registration_path %></li>
            <li><%= link_to 'ログイン 管理者', new_admin_session_path %></li>
            <% end %>
          </ul>
        </nav>
        <nav class="nav navbar-nav navbar-right">
          <div class="input-group header-search">
            <div class="search-form">
              <%= form_tag(search_path, method: :get) do %>
               <%= text_field_tag 'search[content]' %>
                <%= select_tag 'search[model]', options_for_select({ "User" => "user", "Menu" => "menu" }) %>
                <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
                <%= submit_tag '検索', class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>