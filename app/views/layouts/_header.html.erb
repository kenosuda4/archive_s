  <div class="container">
    <div class="row">
      <div class="col-xs-2">
      </div>
      <div class="col-xs-4">
        <nav class="nav navbar-nav navbar-left">
          <div class="input-group header-search">
           <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
            <span class="input-group-btn">
            <%= button_tag "", :name => nil, class: "glyphicon glyphicon-search btn btn-default" %>
            </span>
          </div>
        </nav>
      </div>
      <div class="col-xs-6" style="height:10px;">
        <nav class="clearfix" style="line-height: 10px;font-size: 10px;">
          <ul class="nav navbar-nav navbar-right header-navi">
